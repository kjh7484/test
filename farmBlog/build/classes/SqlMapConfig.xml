<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-config.dtd">  <!-- ibatis와 mybatis DOCTYPE이 다름 -->
<configuration>
<properties resource="blog/mybatis/db.properties"/> <!-- db정보있는 파일을 등록하여 아래 el사용하여 등록함 -->
 <typeAliases>
  	 <typeAlias alias="BlogBoardDTO" type="blog.dto.Blog_BoardDTO"/>
  	 <typeAlias alias="BlogOptionDTO" type="blog.dto.Blog_OptionDTO"/>
  </typeAliases>
<environments default="development">
<environment id="development">
<transactionManager type="JDBC"/>
<dataSource type="POOLED">
<property name="driver" value="${driver}"/>
<property name="url" value="${url}"/>
<property name="username" value="${username}"/>
<property name="password" value="${password}"/>
</dataSource>
</environment>
</environments>
<mappers>
<mapper resource="blog/mybatis/BlogMapper.xml"/>
</mappers>
</configuration>